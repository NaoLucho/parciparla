                                </div>
                            {% endif %}
                        </div>
                        <div class="icons-especes hidden-sm">
                            {% for taxon in item.taxons %}
                                {% if loop.index <= 2 %}
                                    <div class="icon">
                                        <i class="icon-{{taxon.icon}}" data-toggle="popover" data-content="{{taxon.name}}" data-trigger="hover" data-placement="bottom"></i>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        {% if item.localisations is empty %}
                            <a href="#" class="hidden-xs hidden-sm">{{ 'Pas de localisation définie'|upper }}</a>
                        {% else %}
                            {% for localisation in item.localisations %}
                                <a href="#" class="hidden-xs hidden-sm" style="padding-right:5px;">{{ localisation.nom }}</a>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
                {# {% endif %} #}
            {% endfor %}
        {% endif %}

    </div>

    {# Navigation #}
    {% if pages > 1 and page is defined %}
        <nav class="single-pager mt-3">
            <ul class="pagination text-center">
                {% for page in 1..pages %}
                    <li>
                        <a href="{{ path('site_buildpage', {'slug':'ecosysteme-sciences-participatives','page': page })}}">{{ loop.index }}</a>{{ loop.index != loop.length ? '-'}}</li>
                {% endfor %}
            </ul>
        </nav>
    {% endif %}

    {% if isblock is defined %}
        <a href="{{ path('site_buildpage', {'slug':'ecosysteme-sciences-participatives'})}}" class="btn btn-default mt-2 pull-right" title="Voir tous les observatoires">Voir tous les observatoires</a>
        <span class="clearfix"></span>
    {% endif %}
