                                <a href="{{ item.path }}"><img src="{{ item.thumbnail }}" alt="{{ item.title }}" style="width:120px"></a>
                            {% endif %}
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">
                                {% if item.programid is defined %}
                                    <a href="{{ path('site_buildpageid', { 'slug': 'fiche_observatoire', 'id': item.programid }) }}">{{ item.title }}</a>
                                {% else %}
                                    <a href="{{ item.path }}">{{ item.title }}</a>
                                {% endif %}
